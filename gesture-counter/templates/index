    <script>
        /*
        ===========================================
        JavaScript Client-Side Logic
        ===========================================
        Handles UI updates and communication with Flask backend
        */

        let sessionActive = false;
        let updateInterval = null;
        let lastCount = 0;

        /**
         * Start a new counting session
         * Sends POST request to backend to initialize session
         */
        async function startSession() {
            try {
                const response = await fetch('/start_session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.status === 'started') {
                    sessionActive = true;
                    document.getElementById('start-btn').disabled = true;
                    document.getElementById('performance-indicator').className = 'performance-indicator active';
                    document.getElementById('performance-indicator').textContent = 'ðŸ”¥ Session Active! Move your hand!';
                    
                    // Start polling for updates every 100ms
                    updateInterval = setInterval(updateStats, 100);
                }
            } catch (error) {
                console.error('Error starting session:', error);
                alert('Failed to start session. Please refresh the page.');
            }
        }

        /**
         * Update statistics display
         * Polls backend for current count, time, and rank
         */
        async function updateStats() {
            try {
                const response = await fetch('/get_stats');
                const data = await response.json();

                // Update count display
                document.getElementById('count-display').textContent = data.count;
                
                // Celebrate when count increases
                if (data.count > lastCount) {
                    const countBox = document.getElementById('count-box');
                    countBox.classList.add('celebration');
                    setTimeout(() => countBox.classList.remove('celebration'), 500);
                    lastCount = data.count;
                }

                // Update timer
                document.getElementById('timer-display').textContent = data.remaining_time + 's';

                // Update progress bar
                const progressPercent = (data.remaining_time / 60) * 100;
                const progressBar = document.getElementById('progress-bar');
                progressBar.style.width = progressPercent + '%';
                document.getElementById('progress-text').textContent = 
                    data.remaining_time > 0 ? `${data.remaining_time}s remaining` : 'Complete!';

                // Update rank display
                document.getElementById('rank-display').textContent = data.rank || '-';

                // Update best score
                document.getElementById('best-display').textContent = data.best_score;

                // Handle session completion
                if (!data.session_active && sessionActive) {
                    sessionActive = false;
                    clearInterval(updateInterval);
                    document.getElementById('start-btn').disabled = false;
                    
                    // Show completion message
                    const indicator = document.getElementById('performance-indicator');
                    indicator.className = 'performance-indicator complete';
                    indicator.innerHTML = `
                        ðŸŽ‰ Session Complete!<br>
                        Final Score: ${data.score} gestures<br>
                        Rank: ${data.rank}
                    `;

                    // Add active class to count box for emphasis
                    document.getElementById('count-box').classList.add('active');
                }

            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        // Initialize stats display on page load
        updateStats();
    </script>
